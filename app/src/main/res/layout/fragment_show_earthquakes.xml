<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/showEarthquakesFragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="3dp"
	tools:context=".view.ShowEarthquakesFragment">

	<TextView
		android:id="@+id/showRecent_textview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:fontFamily="sans-serif"
		android:text="@string/show_recent_earthquakes"
		android:textSize="15sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.progressindicator.LinearProgressIndicator
		android:id="@+id/networkConnectivity_mProgressIndicator"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_marginTop="10dp"
		android:indeterminate="true"
		android:contentDescription="@string/loading_data_from_the_network"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/showRecent_textview" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/earthquakeList_recyclerview"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/showRecent_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>