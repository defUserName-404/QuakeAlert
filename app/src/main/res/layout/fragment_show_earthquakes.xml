<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/showEarthquakesFragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.ShowEarthquakesFragment">

	<TextView
		android:id="@+id/showRecent_textview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/show_recent_earthquakes"
		android:textStyle="bold"
		android:textSize="15sp"
		android:fontFamily="sans-serif"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/earthquakeList_recyclerview"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/showRecent_textview"
		app:layout_constraintBottom_toBottomOf="parent">
	</androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>